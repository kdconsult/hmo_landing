<% content_for :title, "Campaigns" %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-950 py-10">
  <div class="max-w-5xl mx-auto px-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 dark:bg-green-900 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
      <h1 class="font-bold text-3xl text-quaternary dark:text-white">Campaigns</h1>
      <%= link_to "New campaign", new_campaign_path, class: "rounded-xl px-6 py-3 bg-primary hover:bg-primary/90 text-white font-semibold shadow-lg hover:shadow-xl transition-all duration-300" %>
    </div>

    <div class="overflow-x-auto rounded-xl shadow border border-secondary/20 dark:border-secondary/60 bg-white dark:bg-gray-900">
      <table class="min-w-full divide-y divide-secondary/20 dark:divide-secondary/60 text-left">
        <thead class="bg-gray-100 dark:bg-gray-800 sticky top-0 z-10">
          <tr>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white whitespace-nowrap">Title</th>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white whitespace-nowrap">Slug</th>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white whitespace-nowrap">Start Date</th>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white whitespace-nowrap">End Date</th>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white whitespace-nowrap">Active</th>
            <th class="px-6 py-4 font-semibold text-quaternary dark:text-white text-right whitespace-nowrap">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-secondary/20 dark:divide-secondary/60">
          <% if @campaigns.any? %>
            <% @campaigns.each_with_index do |campaign, i| %>
              <tr class="even:bg-gray-100 even:dark:bg-gray-800 odd:bg-white odd:dark:bg-gray-900 transition-colors">
                <td class="px-6 py-4 text-gray-900 dark:text-gray-100 font-medium"><%= campaign.title %></td>
                <td class="px-6 py-4 text-gray-700 dark:text-gray-300"><%= campaign.slug %></td>
                <td class="px-6 py-4 text-gray-700 dark:text-gray-300"><%= campaign.start_date %></td>
                <td class="px-6 py-4 text-gray-700 dark:text-gray-300"><%= campaign.end_date %></td>
                <td class="px-6 py-4">
                  <% if campaign.active? %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300">Active</span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300">Inactive</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-right whitespace-nowrap">
                  <div class="flex justify-end gap-2">
                    <%= link_to campaign, class: "inline-flex items-center justify-center rounded-lg p-2 bg-gray-100 dark:bg-gray-800 hover:bg-primary/10 dark:hover:bg-primary/20 text-primary dark:text-primary focus:outline-none focus:ring-2 focus:ring-primary transition-all", title: "Show" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                    <% end %>
                    <%= link_to edit_campaign_path(campaign), class: "inline-flex items-center justify-center rounded-lg p-2 bg-gray-100 dark:bg-gray-800 hover:bg-primary/10 dark:hover:bg-primary/20 text-primary dark:text-primary focus:outline-none focus:ring-2 focus:ring-primary transition-all", title: "Edit" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 11l6 6M3 21h6l11-11a2.828 2.828 0 00-4-4L5 17v4z"/></svg>
                    <% end %>
                    <%= button_to campaign, method: :delete, class: "inline-flex items-center justify-center rounded-lg p-2 bg-red-100 dark:bg-red-900 hover:bg-red-200 dark:hover:bg-red-800 text-red-700 dark:text-red-300 focus:outline-none focus:ring-2 focus:ring-red-500 transition-all", title: "Delete", data: { turbo_confirm: "Are you sure?" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">No campaigns found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
