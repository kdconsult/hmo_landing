<div id="<%= dom_id campaign %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= campaign.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= campaign.slug %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= campaign.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= campaign.start_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">End date:</strong>
    <%= campaign.end_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Active:</strong>
    <%= campaign.active? ? "Yes" : "No" %>
  </div>
</div>
