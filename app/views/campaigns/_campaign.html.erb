<div id="<%= dom_id campaign %>" class="w-full my-2 p-4 bg-white dark:bg-gray-900 rounded-xl border border-secondary/20 dark:border-secondary/60 shadow-sm">
  <div class="flex flex-wrap gap-4 items-center">
    <div>
      <span class="block text-xs font-semibold text-quaternary dark:text-white mb-1">Title</span>
      <span class="text-gray-900 dark:text-gray-100"><%= campaign.title %></span>
    </div>
    <div>
      <span class="block text-xs font-semibold text-quaternary dark:text-white mb-1">Slug</span>
      <span class="text-gray-700 dark:text-gray-300"><%= campaign.slug %></span>
    </div>
    <div>
      <span class="block text-xs font-semibold text-quaternary dark:text-white mb-1">Start</span>
      <span class="text-gray-700 dark:text-gray-300"><%= campaign.start_date %></span>
    </div>
    <div>
      <span class="block text-xs font-semibold text-quaternary dark:text-white mb-1">End</span>
      <span class="text-gray-700 dark:text-gray-300"><%= campaign.end_date %></span>
    </div>
    <div>
      <span class="block text-xs font-semibold text-quaternary dark:text-white mb-1">Active</span>
      <% if campaign.active? %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300">Active</span>
      <% else %>
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300">Inactive</span>
      <% end %>
    </div>
  </div>
</div>
